<plugin>
    <extension
          point="org.eclipse.ui.editors">
       <editorContentTypeBinding
             contentTypeId="org.eclipse.dartboard"
             editorId="org.eclipse.ui.genericeditor.GenericEditor">
       </editorContentTypeBinding>
    </extension>
    <extension point="org.eclipse.core.contenttype.contentTypes">
        <content-type base-type="org.eclipse.core.runtime.text" file-extensions="dart" id="org.eclipse.dartboard" name="Dart" priority="normal"></content-type>
    </extension>
    <extension point="org.eclipse.lsp4e.languageServer">
        <server
              class="org.eclipse.dartboard.DartLanguageServerStreamProvider"
              clientImpl="org.eclipse.dartboard.client.DartLanguageClientImpl"
              id="org.eclipse.dartboard.server"
              label="Dart Language Server"></server>
        <contentTypeMapping contentType="org.eclipse.dartboard" id="org.eclipse.dartboard.server"></contentTypeMapping>
    </extension>
    <extension point="org.eclipse.tm4e.registry.grammars">
        <grammar path="assets/dart.json" scopeName="source.dart"></grammar>
        <scopeNameContentTypeBinding contentTypeId="org.eclipse.dartboard" scopeName="source.dart"></scopeNameContentTypeBinding>
    </extension>
    <extension point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
        <languageConfiguration contentTypeId="org.eclipse.dartboard" path="assets/dart-language-configuration.json"></languageConfiguration>
    </extension>
    <extension point="org.eclipse.debug.core.launchConfigurationTypes">
        <launchConfigurationType delegate="org.eclipse.dartboard.launch.LaunchConfig" id="org.eclipse.dartboard.launch" modes="run, debug" name="Run Dart Program"></launchConfigurationType>
    </extension>
    <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
        <launchConfigurationTabGroup class="org.eclipse.dartboard.launch.LaunchTabGroup" id="org.eclipse.dartboard.launchTabGroups" type="org.eclipse.dartboard.launch"></launchConfigurationTabGroup>
    </extension>
    <extension point="org.eclipse.ui.preferencePages">
        <page class="org.eclipse.dartboard.preference.DartPreferencePage" id="org.eclipse.dartboard.preferencePage" name="Dart"></page>
    </extension>
    <extension point="org.eclipse.core.runtime.preferences">
        <initializer class="org.eclipse.dartboard.preference.DartPreferenceInitializer"></initializer>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution allPopups="false" locationURI="popup:org.eclipse.ui.projectConfigure">
        <command commandId="org.eclipse.dartboard.dartprojectnature.command" label="Convert to Dart Project" mnemonic="D" style="push">
        <visibleWhen>
        <iterate
             ifEmpty="false"
             operator="or">
          <adapt
                type="org.eclipse.core.resources.IProject">
             <not>
                <test
                      property="org.eclipse.core.resources.projectNature"
                      value="org.eclipse.dartboard.dartprojectnature">
                </test>
             </not>
          </adapt>
       </iterate>
                </visibleWhen>
            </command>
        </menuContribution>
        <menuContribution
              locationURI="popup:org.eclipse.ui.popup.any?after=additions">
           <menu
                 id="org.eclipse.dartboard.pubmenuentry"
                 label="Pub">
              <command
                    commandId="org.eclipse.dartboard.commands.pubget"
                    style="push">
              </command>
              <visibleWhen>
                 <with
                       variable="selection">
                    <count
                          value="1">
                    </count>
                    <iterate>
                       <adapt
                             type="org.eclipse.core.resources.IResource">
                          <test
                                forcePluginActivation="true"
                                property="org.eclipse.dartboard.isDartProject">
                          </test>
                       </adapt>
                    </iterate>
                 </with>
              </visibleWhen>
           </menu>
        </menuContribution>
    </extension>
    <extension point="org.eclipse.debug.ui.launchShortcuts">
        <shortcut class="org.eclipse.dartboard.launch.LaunchShortcut" id="org.eclipse.dartboard.run_as_shortcut" label="Run as Dart Program" icon="icons/dart.png" modes="run">
     <contextualLaunch>
        <enablement>
           <with
                 variable="selection">
              <count
                    value="1">
              </count>
              <iterate>
                 <adapt
                       type="org.eclipse.core.resources.IResource">
                    <test
                          forcePluginActivation="true"
                          property="org.eclipse.dartboard.isDartProject">
                    </test>
                 </adapt>
              </iterate>
           </with>
        </enablement>
     </contextualLaunch>
            
        </shortcut>
        <shortcut id="org.eclipse.dartboard.launch_file" class="org.eclipse.dartboard.launch.LaunchFileShortcut" label="Run File..." icon="icons/dart.png" modes="run">
            <contextualLaunch>
                <enablement>
                    <with variable="selection">
                        <count value="1" />
                        <iterate>
                            <or>
                                <and>
                                    <adapt type="org.eclipse.core.resources.IFile" />
                                    <test property="org.eclipse.debug.ui.matchesPattern" value="*.dart" />
                                </and>
                            </or>
                        </iterate>
                    </with>
                </enablement>
            </contextualLaunch>
        </shortcut>
    </extension>
	<extension
		point="org.eclipse.debug.ui.launchConfigurationTypeImages">
		<launchConfigurationTypeImage
			id="org.eclipse.dartboard.launch.image"
			configTypeID="org.eclipse.dartboard.launch" icon="icons/dart.png" />
	</extension>
  <extension
          point="org.eclipse.ui.newWizards">
        <category
             id="org.eclipse.dartboard.eclipse.wizards"
             name="Dart"></category>
        <wizard
             category="org.eclipse.dartboard.eclipse.wizards"
             class="org.eclipse.dartboard.project.DartProjectWizard"
             icon="icons/dart.png"
             id="org.eclipse.dartboard.dart.newproject"
             name="Dart Project"
             project="true">
            <description>
              Create a Dart project
          </description>
        </wizard>
        <wizard
             category="org.eclipse.dartboard.eclipse.wizards"
             class="org.eclipse.dartboard.project.DartFileWizard"
             icon="icons/dart_file.png"
             id="org.eclipse.dartboard.dart.newfile"
             name="Dart File">
            <description>
             Create a Dart file
          </description>
        </wizard>
    </extension>
    <extension
          point="org.eclipse.ui.perspectiveExtensions">
        <perspectiveExtension
             targetID="*">
            <newWizardShortcut
                id="org.eclipse.dartboard.dart.newproject"/>
            <newWizardShortcut
                id="org.eclipse.dartboard.dart.newfile"/>
        </perspectiveExtension>
    </extension>
    <extension
          point="org.eclipse.tm4e.ui.themes">
       <themeAssociation
             scopeName="source.dart"
             themeId="org.eclipse.tm4e.ui.themes.EclipseLight">
       </themeAssociation>
    </extension>
    <extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="org.eclipse.dartboard.propertytester.IsDartProjectPropertyTester"
             id="org.eclipse.dartboard.isDartProject"
             namespace="org.eclipse.dartboard"
             properties="isDartProject"
             type="java.lang.Object">
       </propertyTester>
    </extension>
    <extension
          point="org.eclipse.debug.ui.launchGroups">
       <launchGroup
             bannerImage="icons/banner.png"
             id="org.eclipse.dartboard.launchGroup"
             image="icons/dart.png"
             label="Dart Launch Group"
             mode="run">
       </launchGroup>
    </extension>
    <extension
          point="org.eclipse.tm4e.ui.snippets">
       <snippet
             name="org.eclipse.dartboard.sample.dart"
             path="assets/snippets/sample.dart"
             scopeName="source.dart">
       </snippet>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
       <command
             description="Get the current package&apos;s dependencies."
             id="org.eclipse.dartboard.commands.pubget"
             name="Get dependencies">
       </command>
    </extension>
    <extension
          point="org.eclipse.ui.handlers">
       <handler
             class="org.eclipse.dartboard.pub.PubGetHandler"
             commandId="org.eclipse.dartboard.commands.pubget">
       </handler>
    </extension>
    <extension
          point="org.eclipse.ui.commandImages">
       <image
             commandId="org.eclipse.dartboard.commands.pubget"
             disabledIcon="platform:/plugin/org.eclipse.pde.ui/icons/dlcl16/refresh.png"
             icon="platform:/plugin/org.eclipse.pde.ui/icons/elcl16/refresh.png">
       </image>
    </extension>
    <extension
          point="org.eclipse.ui.startup">
       <startup
             class="org.eclipse.dartboard.ListenerService">
       </startup>
    </extension>
    <extension
          point="org.eclipse.ui.importWizards">
       <wizard
             category="org.eclipse.dartboard.import.category"
             class="org.eclipse.ui.internal.wizards.datatransfer.SmartImportWizard"
             icon="icons/dart.png"
             id="org.eclipse.dartboard.import.wizard"
             name="Dart Project">
       </wizard>
       <category
             id="org.eclipse.dartboard.import.category"
             name="Dart">
       </category>
    </extension>
    <extension
          point="org.eclipse.ui.ide.projectConfigurators">
       <projectConfigurator
             class="org.eclipse.dartboard.project.DartProjectConfigurator"
             label="Dart Project">
       </projectConfigurator>
    </extension>
</plugin>
