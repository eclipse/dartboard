<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.eclipse.dartboard"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="dart"
            id="org.eclipse.dartboard"
            name="Flutter Language Server"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="org.eclipse.dartboard.FlutterLanguageServerStreamProvider"
            id="org.eclipse.dartboard.server1"
            label="org.eclipse.dartboard.server1">
      </server>
      <contentTypeMapping
            contentType="org.eclipse.dartboard"
            id="org.eclipse.dartboard.server1">
      </contentTypeMapping>
   </extension>
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <grammar
            path="assets/dart.json"
            scopeName="source.dart">
      </grammar>
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.dartboard"
            scopeName="source.dart">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
      <languageConfiguration
            contentTypeId="org.eclipse.dartboard"
            path="assets/dart-language-configuration.json">
      </languageConfiguration>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.dartboard.launch.LaunchConfig"
            id="org.eclipse.dartboard.launch"
            modes="run, debug"
            name="Run Dart Program">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.dartboard.launch.LaunchTabGroup"
            id="org.eclipse.dartboard.launchTabGroups"
            type="org.eclipse.dartboard.launch">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.dartboard.preference.DartPreferencePage"
            id="org.eclipse.dartboard.preferencePage"
            name="Dart">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.dartboard.preference.DartPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="org.eclipse.dartboard.launch.console.DartConsoleFactory"
            label="Dart Console">
      </consoleFactory>
   </extension>

</plugin>
